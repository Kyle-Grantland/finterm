{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/renderer/src/*"]
    }
  },
  "include": ["src/**/*", "electron.vite.config.ts"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
